function out($l, $v) { 
  $maxlen = 60;
  if (is_null($v))
    drush_print("$l: NULL");
  else if (is_array($v) || is_object($v))
    drush_print("$l: " . var_export($v, 1));
  else if (is_string($v) && (drupal_strlen($v) > $maxlen))
    drush_print("$l: " . substr($v, 0, $maxlen) . " ...");
  else 
    drush_print("$l: $v"); 
} // out


